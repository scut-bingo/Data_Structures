#include <iostream>
using namespace std;

int  NumberOf1(int n) {//此种方法需要循环32次  flag的最大位数 四个字节
	int count = 0;
	unsigned int flag = 1;
	while (flag){
		if (flag&n)count++;
		flag = flag << 1;
	}
	return count;
}
int  NumberOf1_1(int n){
	int count=0;
	while (n)
	{
		count++;
		n = (n - 1)&n;
	}
	return count;
}


int main(){
	cout << NumberOf1(127);

	return 0;
}
